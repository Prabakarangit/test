#!/bin/bash

echo "***** commit-msg file is working! ******"

local_branch="$(git rev-parse --abbrev-ref HEAD)"

commit_message=$1


# Throw error if the message is empty
if [[ -z $(grep '[^[:space:]]' $commit_message) ]] ; then
    echo "You can't just commit without a message !!" >&2
    exit 1
fi

